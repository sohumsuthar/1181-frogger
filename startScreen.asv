% Draws scene with the start menu components such as the game title and
% mouse input to allow the user to press START 
function startScreen()

% see function 'initVars' for all variable information
global scn;
global X;
global Y;
global Z;
global blankL;
global frogPos;

% Draw start menu scene
drawScene(scn, X, Y, Z);
getMouseInput(scn);
% Scene labels and titles
refreshScene();
blankL(frogPos(1), frogPos(2)) = 2;
end